{% extends "./main.njk" %}
{% from "meta/utils.njk" import icon,
logo %}
{% block content %}
  {% include "ui/navigation.njk" %}

  <article class="post h-entry" aria-labelledby="post-title">
    <section class="section section--wide margin-block--xl">
      <h1 id="post-title p-name" class="post__title">{{ title | safe }}</h1>
      <div class="d-flex jc--space-between">
        <time class="dt-published" datetime="{{ page.date | machineReadableDate }}">{{ page.date | humanReadableDate }}</time>
      </div>
      <a href="{{ page.url }}" hidden="hidden" class="u-url">Canonical link</a>
      <a hidden="hidden" rel="author" class="p-author h-card" href="{{ authors[author].url }}">{{ authors[author].name }}</a>
      {% for link in syndication %}
        <a href="{{ link }}" rel="syndication" class="u-syndication"></a>
      {% endfor %}
    </section>
    <section class="section post__body e-content">
      {{ content | safe }}
    </section>
  </article>

  {% include "ui/footer.njk" %}
{% endblock %}