<article class="article article--video" data-video-type="{{ video.data.type }}">
  {% set cover = video.data.cover %}
  {% set folder = cover.folder %}
  {% set filename = cover.filename %}
  {% set sizes = cover.sizes %}
  {% set formats = cover.formats %}
  {% set width = cover.width %}
  {% set height = cover.height %}
  {% set container = "videos" %}
  {% set videoType = video.data.type %}
  {% set videoLink = video.url if video.data.video else video.data.link.url %}
  {% set isNewTab = video.data.video.filename == null %}
  <div class="article__thumbnail">
    <a href="{{ videoLink }}" {{ 'target="_blank"' if isNewTab }} aria-labelledby="header-{{ video.data.title | slugify }}">{% include "ui/picture.njk" %}</a>
  </div>
  {% if videoType !== 'short' %}
    <h3 class="article__title" id="header-{{ video.data.title | slugify }}">
      <a href="{{ videoLink }}" {{ 'target="_blank"' if isNewTab }}>{{ video.data.title | safe }}</a>
    </h3>
  {% endif %}
  {% if videoType === 'short' %}
    <h3 class="article__summary" id="header-{{ video.data.title | slugify }}">
      <a href="{{ videoLink }}" {{ 'target="_blank"' if isNewTab }}>{{ video.data.title | safe }}</a>
    </h3>
  {% endif %}
  <footer class="article__metadata">
    <time datetime="{{ video.date | machineReadableDate }}">{{ video.date | humanReadableDate }}</time>
  </footer>
</article>